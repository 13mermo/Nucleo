{% extends '/dashboard/template.html.twig' %}

{% block title %}NIDIAp Grupos de Trabalho{% endblock %}

{% block body %}

    <div class="fundo">
        <h1>Todos os Grupos</h1>
        <a class="btn btn-warning" style="float: right; margin-top: -45px" href="{{ path('create_grupo') }}">Novo Grupo</a>

        {% if grupos is not empty %}
            <table class="table table-hover">
                <thead class="thead-light">
                <tr>
                    <th>Img</th>
                    <th>Titulo</th>
                    <th>Descrição</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for grupo in grupos %}
                    <tr>
                        <td> <img src="{{ asset('upload/imagens/' ~ grupo.imagem.imageName)}}" height="50" width ="50px"></td>
                        <td class="crr">{{ grupo.title | slice(0, 25)}}</td>
                        <td class="crr">{{ grupo.descricao | slice(0, 25) }}...</td>
                        <td class="crr" style="float: right">
                            <a class="btn btn-danger"  href="{{ path('delete_grupo', {'id': grupo.id}) }}">Deletar</a>
                            <a class="btn btn-success"  href="{{ path('update_grupo', {'id': grupo.id}) }}">Atualizar</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Sem Grupos no momento.</p>
        {% endif %}

        <br/>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
