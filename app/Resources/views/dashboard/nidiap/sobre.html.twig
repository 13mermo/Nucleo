{% extends '/dashboard/template.html.twig' %}

{% block title %}Dashboard Sobre{% endblock %}

{% block body %}

    <div class="fundo">

        <h1>Sobre</h1>

        {% if sobre is not empty %}
            <table class="table table-hover">
                <thead class="thead-light">
                <tr>
                    <th>Titulo</th>
                    <th>Descrição</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for s in sobre %}
                    <tr>
                        <td>{{ s.title | slice(0, 25)}}</td>
                        <td>{{ s.descricao | slice(0, 25) }}...</td>
                        <td style="float: right">
                            <a class="btn btn-danger" href="{{ path('delete_sobre', {'id': s.id}) }}">Deletar</a>
                            <a class="btn btn-success" href="{{ path('update_sobre', {'id': s.id}) }}">Atualizar</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Sem Imformação no Momento!</p>
        {% endif %}

        <br/>
        <a class="btn btn-success" href="{{ path('sobre_create') }}">Inserir Sobre</a>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}