{% extends '/dashboard/template.html.twig' %}

{% block title %}Dashboard Linhas de Pesquisa{% endblock %}

{% block body %}


    <div class="fundo">

        <h1>Todas as Linhas</h1>
        <a class="btn btn-warning" style="float: right; margin-top: -45px" href="{{ path('create_linha') }}">Nova Linha</a>
        {% if linhas is not empty %}
            <table class="table table-hover">
                <thead class="thead-light">
                <tr>
                    <th>Titulo</th>
                    <th>Descrição</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for linha in linhas %}
                    <tr>
                        <td>{{ linha.title | slice(0, 25)}}</td>
                        <td>{{ linha.descricao | slice(0, 25) }}...</td>
                        <td style="float: right">
                            <a class="btn btn-danger" href="{{ path('delete_linha', {'id': linha.id}) }}">Deletar</a>
                            <a class="btn btn-success" href="{{ path('update_linha', {'id': linha.id}) }}">Atualizar</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Sem Linhas de Pesquisas No Momento!</p>
        {% endif %}

        <br/>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
