                <a href="" title="Saiba Mais" class="btn btn-outline-secondary mr-5">Saiba Mais</a>
            </div>
        </div>
    </div>
</div>
<div style="height: 150px"></div>
<!-- Fim conteudo sobre o nidiap -->
<div class="col-md-6 text-baixo float-left"></div>  <!-- Imagem cortada-->

<!-- Inicio Trabalhos desenvolvidos no nucleo -->
    <div class="secao">
        <div class="container">
            <div class="col-lg-6 col-md-12 text-center text-white float-left">
                <h1>
                    Realizados aqui
                </h1>
            </div>
            <div class="container row m-auto slide-trabalho clear" style="position: relative;">
                {% for projeto in projetos %}
                    <div class="col-md-3 col-sm-12 pt-5 slide">
                        <div class="shadow-ms mb-5">
                            <div>
                                <a href="">
                                    <img src="{{ asset('upload/imagens/' ~ projeto.imagem.imageName)}}" alt="Desenvolvimento de sistemas" class="card-img-top img-shadow">
                                </a>
                            </div>
                            <div class="card-body bg-white min-max text-center">
                                <h5 class="card-title text-secondary">{{ projeto.title | slice(0, 25)}}</h5>
                                <p class="card-text text-secondary">{{ projeto.descricao | slice(0, 25) }}</p>
                            </div>
                            <div class="card-footer text-center bg-white border-0">
                                <a href="{{ path('detalhe_servico_index') }}" title="Abrir" class="btn-card"><strong>Abrir</strong></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="slider-btn">
                <span class="prev position-top"><i class="fas fa-chevron-left"></i></span>
                <span class="next position-top"><i class="fas fa-chevron-right"></i></span>
            </div>
        </div>

        <div class="clear"></div>
    </div>
<!-- Fim Trabalhos desenvolvidos no nucleo -->

    <div class="col-md-7 text float-right" style="margin-top: -70px;"></div>  <!-- Imagem cortada-->

<!-- Inicio Noticias -->

    <div class="container">
        <div class="col-lg-6 col-md-12 mb-3 float-right">
            <h1 class="text-center text-secondary titulo-up-noticia">
                Notícias
            </h1>
        </div>
        <div class="mt-5 pb-5 clear">
            {% for noticia in noticias %}
                <div class="col-md-12 mb-3 teste">
                    <div class="row no-gutters">
                        <div class="col-md-5">
                            <img src="{{ asset('upload/imagens/' ~ noticia.imagem.imageName)}}" class="card-img" alt="...">
                        </div>
                        <div class="col-md-6 ml-5">
                            <div class="card-body">
                                <h1 class="card-title text-secondary">{{ noticia.title | slice(0, 25)}}</h1>
                                <p class="card-text text-secondary quebra">
                                    {{ noticia.descricao  | slice(0, 200) }}
                                </p>
                                <div class="d-flex justify-content-center">
                                    <a href="" title="Mais" class="btn btn-secondary mr-5" style="width: 90px;">Mais</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="d-flex justify-content-center mt-5">
                <a href="{{ path('noticia_index') }}" title="Mais" class="btn-card-noticia text-decoration-none mr-5"><b>+ Notícias</b></a>
            </div>
        </div>
    </div>
    <!-- Fim Noticias -->
</section>
<!-- Fim seção Conteudo-->

{% endblock %}


{% block javascripts %}
    {{ parent() }}

{% endblock %}
