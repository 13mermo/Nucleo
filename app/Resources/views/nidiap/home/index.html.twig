    <div class="container">
        <div class="row">
            <div class="col-md-12  text-white"> <!-- inicio menu baner -->
                <div class="text-sm-center baner">
                    <img src="{{ asset('vendor/bootstrap-dist/imagem/Ativo 12fundo branco.png') }}">
                </div>
            </div>
            <div class="col-md-12 text-white text-sm-center">
                <h2 class="caixa">Núcleo de Inovação, Desenvolvimento em Informática Aplicada</h2>
            </div>
            <!-- Fim menu bane-->
        </div>
    </div>
</section>
<!-- Fim da seção home-->

<!-- Inicio seção Conteudo-->
<section>
<div class="col-md-7 text float-right"></div>  <!-- Imagem cortada-->

<!-- Inicio conteudo sobre o nidiap -->
<div class="container">
    <div class="row mt-3">
        <div class="col-md-6">
            <img style="max-height: 300px; max-width: 700px;" src="{{ asset('vendor/bootstrap-dist/imagem/oquefazemos.png') }}" alt="Desenvolvimento de sistemas" class="card-img-top">
        </div>
        <div class="col-md-6 mb-3 ">
            <h2 class="text-center text-secondary titulo-up">
                Sobre nós
            </h2>
            <br>
            <p class="text-secondary">
